{
  "name": "omdb-react-app",
  "private": true,
  "type": "module",
  "homepage": "https://mariodev64.github.io/omdb-react-app",
  "scripts": {
    "build": "react-router build",
    "build:gh-pages": "react-router build --base /omdb-react-app",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "prepare": "husky",
    "commit": "cz",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "prettier --check . && react-router typegen && tsc --noEmit",
    "predeploy": "npm run build:gh-pages",
    "deploy": "gh-pages -d build/client"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@react-router/node": "^7.7.0",
    "@react-router/serve": "^7.7.0",
    "axios": "^1.10.0",
    "framer-motion": "^12.23.6",
    "isbot": "^5.1.27",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.7.0",
    "zod": "^4.0.5",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@react-router/dev": "^7.7.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.4",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "gh-pages": "^6.1.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
